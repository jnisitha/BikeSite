<!DOCTYPE html>
<html>

<head>
    <title>Bike Routes Toronto</title>
    <link rel = "stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel = "stylesheet" href="/stylesheets/main.css">
</head>


<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">BikeRoutes</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <% if(!currentUser){ %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Sign Up</a></li>
                <% } else { %>
                    <li><a href="#">Logged in as <%= currentUser.username %></a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
<!-- Specific flash messages -->
    <% if (pleaseLogin && pleaseLogin.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= pleaseLogin %>
        </div>
    <% } %>
    <% if (loggedOut && loggedOut.length > 0){ %>
        <div class="alert alert-success" role="alert">
            <%= loggedOut %>
        </div>
    <% } %>
    <% if (notRouteOwner && notRouteOwner.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= notRouteOwner %>
        </div>
    <% } %>
    <% if (notCommentOwner && notCommentOwner.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= notCommentOwner %>
        </div>
    <% } %>
<!-- Generic flash messages. (These have not been added in yet) -->
    <% if (error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (success && success.length > 0){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>
</div>

