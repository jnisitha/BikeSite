<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Bike Route </h1>
            <form action = "/bikeroutes" method = "POST">
                <div class="col-md-4" style="width: 30%; margin: 25px auto;">
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" placeholder="title">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                    </div>
                </div>
                <div class="col-md-8" style="margin: 25px auto;">
                    <div class="form-group">
                        <textarea rows="30" class="form-control" type="text" name="description" placeholder="Blog Post Description"></textarea>
                    </div>
                </div>
            </form>            
    </div>
</div>

<% include ../partials/footer %>